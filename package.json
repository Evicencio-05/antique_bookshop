{
  "name": "antique_bookshop",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "tailwindcss -i ./assets/css/tailwind.css -o ./book_shop_here/static/book_shop_here/site.css --minify",
    "watch": "tailwindcss -i ./assets/css/tailwind.css -o ./book_shop_here/static/book_shop_here/site.css --watch",
    "django": "python manage.py runserver",
    "dev": "concurrently -n TAILWIND,DJANGO -c \"cyan.bold,green.bold\" \"npm:watch\" \"npm:django\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.0.0",
    "husky": "^9.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "just": "^0.1.8",
    "rust-just": "^1.43.1"
  }
}
